http {
    # ======= VIRTUAL SERVER #1 =======

    server {
        listen 127.0.0.1:8080;
        server_name localhost;

        # Global error pages
        error_page 404 /errors/404.html;
        error_page 413 /errors/413.html;
        error_page 500 502 503 504 /errors/50x.html;

        # Limit client request body size
        client_max_body_size 2M;

        # ========== ROOT HANDLER ==========
        location / {
            root /var/www/html;
            index index.html index.htm;
        }

        # ========== REDIRECTION ==========
        location /old-page {
            return 301 http://localhost:8080/new-page;
        }

        # ========== DIRECTORY LISTING ==========
        location /public/ {
            root /var/www/public;
            autoindex on;
        }

        # ========== LIMITED METHODS ==========
        location /api/ {
            root /var/www/api;
            limit_except GET POST;
        }

        # ========== FILE UPLOAD ==========
        location /upload/ {
            root /var/www/uploads;
            upload_store /var/www/uploads;
            limit_except POST;
        }

        # ========== CGI HANDLER (Python) ==========
        location /cgi-bin/ {
            root /var/www/cgi-bin;
            cgi_pass /usr/bin/python3;
            cgi_ext .py;
        }

        # ========== STATIC PHP HANDLER ==========
        location /php/ {
            root /var/www/php;
            cgi_pass /usr/bin/php-cgi;
            cgi_ext .php;
        }

        # ========== CUSTOM ERROR PAGES ==========
        location /errors/ {
            root /var/www;
        }
    }

    # ======= VIRTUAL SERVER #2 =======
    server {
        listen 0.0.0.0:8081;
        server_name mysite.com;

        error_page 404 /errors/404.html;

        location / {
            root /var/www/mysite;
            index home.html;
        }

        location /upload/ {
            root /var/www/mysite/uploads;
            upload_store /var/www/mysite/uploads;
            limit_except POST;
        }
    }
}
