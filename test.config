server {
        listen 8081;
        server_name server_one;
        client_max_body_size 1048576;

        error_page 404 /workspaces/webserv/www/errors/404.html;
        error_page 403 /workspaces/webserv/www/errors/403.html;
        error_page 405 /workspaces/webserv/www/errors/405.html;
        root /workspaces/webserv;
        index index.html;

        location / {
            root /workspaces/webserv/www/html;
            index index.html;
			limit_except GET;
			autoindex on;
        }
        location /py/ {
            root /workspaces/webserv/www/python;
            cgi_pass /usr/bin/python3;
            cgi_ext .py;
        }
        location /pp/ {
            proxy_pass http://127.0.0.1:8085;
        }
        location /upload/ {
            root /workspaces/webserv/www/html/fileupload;
            index index.html;
            upload_store /workspaces/webserv/www/store;
            limit_except GET DELETE;
        }
}

server {
        listen 8085;
        server_name server_one;
        client_max_body_size 1048576;

        error_page 404 /workspaces/webserv/www/errors/404.html;
        root /workspaces/webserv/www;
        index index.html;
        autoindex on;

        location /py/ {
            root /workspaces/webserv/www/python;
            index index.html index.py;
            cgi_pass /usr/bin/python3;
            cgi_ext .py;
        }
}

server {
        listen 9090;
        server_name server_two;
        client_max_body_size 2097152;
		error_page 500 /workspaces/webserv/www/errors/500.html;
        error_page 404 /workspaces/webserv/www/errors/404.html;
        root /home/taung/webserv/website/html;

        location /ppass/ {
            root /home/taung/webserv/website/html;
            index home.html;
			limit_except GET POST;
			autoindex on;
			proxy_pass https://www.google.com/;
        }

        location /ppassLocation/ {
            root /home/taung/webserv/website/html;
            index home.html;
			limit_except GET POST;
			autoindex on;
			proxy_pass http://127.0.0.1:8080/items;
        }

        location /files {
            index asdf.html index.html;
            autoindex on;
        }

        location /upload/ {
            upload_store /home/taung/webserv/website/store;
            limit_except GET POST DELETE;
        }

        location /py/ {
            root /home/taung/webserv/website/python;
            index index.html index.py;
            cgi_pass /usr/bin/python3;
            cgi_ext .py;
        }

        location /directory/ {
            return 301 /files;
        }

        location /pp/ {
            proxy_pass http://127.0.0.1:9090/files/index.html;
        }
}
